{
  "manifest_version": 2,
  "name": "Pwned",
  "description": "Chrome extension to check if the website you're visiting or
  the credentials you're entering appear in the hibp database of public breaches",
  "version": "1.0",
  "icons": {
    "16":"/images/noBreach.png",
    "16":"/images/breach.png",
    "48":"/images/breachMedium.png",
    "128":"/images/breachLarge.png"
  },
  "browser_action": {
    "default_icon": "/images/noBreach.png",
    "default_popup": "/html/popup.html",
    "default_title": "Pwned Checker"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://*.haveibeenpwned.com/API/v2"
  ],
  "omnibox": {
    "keyword": "breach"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  }
}
